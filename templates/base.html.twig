<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Dashboard{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="page-wrapper">
            {% block header %}
            <header class="header">
                <nav class="navbar">
                    <div class="navbar-container flex shadow">
                        <ul class="menu-left nav flex">
                            <li class="menu"><a href=""><i class="fas fa-bars"></i></a></li>
                            <li class="beckmann"><a href="{{ path("app_index")}}">beckmann</a></li>
                            <li class="navbar_dashboard"><a href="{{ path("app_project") }}">Projects</a></li>
                            <li class="navbar_clients"><a href="">Appointments</a></li>
                            <li class="navbar_blog"><a href="">Employees</a></li>
                        </ul>               
                        <div class="profile flex">
                            <ul class="menu-right nav flex ">
                                <li class="notifications"><a href=""><svg width="26" height="26" class="cursor-pointer ml-auto mr-4" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M17.0021 10.8009C17.0021 9.52759 16.4963 8.30647 15.596 7.40614C14.6957 6.5058 13.4745 6 12.2013 6C10.928 6 9.7069 6.5058 8.80656 7.40614C7.90623 8.30647 7.40043 9.52759 7.40043 10.8009C7.40043 16.4018 5 18.0021 5 18.0021H19.4026C19.4026 18.0021 17.0021 16.4018 17.0021 10.8009Z" stroke="#8E94A7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M13.5856 21.2027C13.445 21.4452 13.243 21.6465 13.0001 21.7864C12.7572 21.9264 12.4817 22 12.2014 22C11.921 22 11.6456 21.9264 11.4027 21.7864C11.1597 21.6465 10.9578 21.4452 10.8171 21.2027" stroke="#8E94A7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <circle cx="19" cy="7" r="6" fill="#0346F2" stroke="white" stroke-width="2" />
                                    <circle cx="19" cy="7" r="1" fill="white" /></svg></a>
                                </li>
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <li class="user-profile"><a href=""><img class="h-12 w-12 rounded-full" src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" alt="user-image" /></a></li>
                                <li class="user-name"><a href="">{{ app.user.username }}</a></li>
                                <div class="dropdown">
                                    <li class="user-dropdown"><i class="fas fa-ellipsis-v"></i></li>
                                </div>
                                {% else %}
                                <li class="user-login"><a href="{{ path('app_login')}}">Login</a></li>
                                {% endif %}
                                
                                
                                <button class="messages-btn"> 
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-message-circle">
                                    <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z" /></svg>
                                </button>
                            </ul>   
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <div class="dropdown-menu">
                                <ul class="dropdown-list shadow">
                                    <li class="status"><a href=""><i class="far fa-user"></i> Status</a></li>
                                    <li class="settings"><a href=""><i class="fas fa-cogs"></i> Settings</a></li>
                                    <li class="logout"><a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                </ul>
                            </div>
                            {% endif %}  
                        </div>   
                    </div>
                </nav>
            </header>
            {% endblock %}  
            {% block body %}{% endblock %}
            {% block footer %}
            {#
            <div class="footer flex">
                <div class="left flex">
                    <h1>Lorem ipsum</h1>
                    <p>123 City Name</p>
                    <p>(555) 555-555</p>
                    <br>
                    <p>Copyright Â© Date Name. All rights reserved.</p>
                </div>
                <div class = "right flex">
                    <div class="icon-wrapper"><i class="fab fa-facebook-f"></i></div>
                    <div class="icon-wrapper"><i class="far fa-envelope"></i></div>
                    <div class="icon-wrapper"><i class="fab fa-twitter"></i></div>
                    <div class="icon-wrapper"><i class="fab fa-instagram"></i></div>
                </div>
            </div>#}
            {% endblock %}
        </div>
    </body>
</html>
